<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_list"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="5dp"
                    app:riv_oval="true"
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:id="@+id/idname"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="null"
                    android:src="@drawable/ava" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="thienphu"
                    android:id="@+id/name_user"
                    android:textColor="#080808"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="40dp"
                    android:background="@drawable/ic_ellipses"
                    android:layout_height="40dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- moi-->
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/image_main"
                    android:adjustViewBounds="true"
                    android:background="@color/colorBlue"
                    android:layout_height="260dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="20dp"
                    android:id="@+id/image_like"
                    android:background="@drawable/ufi_heart_bold"
                    android:layout_height="20dp" />
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:id="@+id/comment"
                    android:background="@drawable/ufi_comment_bold"
                    android:layout_height="20dp" />
               <!-- <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="15dp"
                    android:background="@drawable/direct"
                    android:layout_height="15dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"></LinearLayout>
                <ImageView
                    android:layout_width="15dp"
                    android:background="@drawable/ufi_save_bold"
                    android:layout_height="15dp" />-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="10 like"
                    android:textSize="12dp"
                    android:id="@+id/quatity_like"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/user_name"
                        android:textColor="@color/colorDark"
                        android:textSize="12dp"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/text"
                        android:textSize="12dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="30 phút trước"
                    android:textSize="8dp"
                    android:id="@+id/date_time"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>