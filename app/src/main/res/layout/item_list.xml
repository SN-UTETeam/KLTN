<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_list"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="5dp"
                    app:riv_oval="true"
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:id="@+id/idname"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="null"
                    android:src="@drawable/ava" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="thienphu"
                    android:textColor="#080808"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:textSize="10dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="40dp"
                    android:background="@drawable/viewall"
                    android:layout_height="40dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/image"
                    android:background="@drawable/ava"
                    android:layout_height="300dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="15dp"
                    android:background="@drawable/ufi_heart_bold"
                    android:layout_height="15dp" />
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="15dp"
                    android:background="@drawable/ufi_comment_bold"
                    android:layout_height="15dp" />
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="15dp"
                    android:background="@drawable/direct"
                    android:layout_height="15dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"></LinearLayout>
                <ImageView
                    android:layout_width="15dp"
                    android:background="@drawable/ufi_save_bold"
                    android:layout_height="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Số lượt like"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Binh luận về cô gái đó "
                    android:id="@+id/text"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>