<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar_tab_post_view"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_username_tab_post_view"
            android:layout_weight="1"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="7dp"
            android:gravity="center|left"
            android:layout_gravity="center"
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:background="@drawable/viewall"
            android:layout_width="40dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <ImageView
        android:id="@+id/img_image_tab_post_view"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_like_tab_post_view"
            android:layout_width="20dp"
            android:background="@drawable/ufi_heart_bold"
            android:layout_height="20dp" />
        <ImageView
            android:id="@+id/img_cmt_tab_post_view"
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:background="@drawable/ufi_comment_bold"
            android:layout_height="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_likes_tab_post_view"
            android:gravity="center|left"
            android:text="0 like"
            android:textColor="@color/colorHaftDark"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorDark"
                android:text="Username "
                android:textStyle="bold"
                android:id="@+id/tv_username_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorDark"
                android:id="@+id/tv_status_tab_post_view"
                android:gravity="center|left"
                android:layout_gravity="center"
                android:text="This is status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:textSize="12dp"
            android:id="@+id/tv_comments_tab_post_view"
            android:text="View 5 Comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="12dp"
            android:id="@+id/tv_time_tab_post_view"
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>