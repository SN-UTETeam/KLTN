<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:paddingBottom="5dp"
    android:layout_height="wrap_content"

    android:paddingTop="5dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_message_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:id="@+id/image_message_body"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintRight_toLeftOf="@+id/image_message_profile"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_marginRight="5dp"
        android:id="@+id/text_message_body"
        android:text="hi man, how are you?"
        android:background="@drawable/rounded_rectangle_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/image_message_body"
        app:layout_constraintRight_toLeftOf="@+id/image_message_profile"
        android:layout_marginLeft="200dp" />

    <TextView
        android:id="@+id/text_message_time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintRight_toLeftOf="@+id/text_message_body"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_body" />
    <TextView
        android:layout_marginLeft="100dp"
        android:visibility="gone"
        android:id="@+id/text_message_time_image"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintRight_toLeftOf="@+id/image_message_body"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_body" />
</android.support.constraint.ConstraintLayout>