<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1ccc9c9"
    tools:context="pjm.tlcn.Activity.TabActivity_home">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_photo"
            android:layout_height="30dp" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/font"
            android:layout_width="wrap_content"
            android:text="Instagram"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_gravity="center|center_horizontal"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/direct"
            android:layout_gravity="center"
            android:layout_height="30dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#25945d"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Tin"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#080808"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:background="@drawable/anh"
                        android:layout_height="40dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Bạn"
                        android:textColor="#080808"
                        android:textAllCaps="false"
                        android:textSize="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:background="@drawable/anh"
                    android:layout_gravity="center"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="thienphu"
                    android:textColor="#080808"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:textSize="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="40dp"
                    android:background="@drawable/viewall"
                    android:layout_height="40dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:background="@drawable/ava"
                    android:layout_height="300dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="15dp"
                    android:background="@drawable/ufi_heart_bold"
                    android:layout_height="15dp" />
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="15dp"
                    android:background="@drawable/ufi_comment_bold"
                    android:layout_height="15dp" />
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="15dp"
                    android:background="@drawable/direct"
                    android:layout_height="15dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"></LinearLayout>
                <ImageView
                    android:layout_width="15dp"
                    android:background="@drawable/ufi_save_bold"
                    android:layout_height="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Số lượt like"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Binh luận về cô gái đó "
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
